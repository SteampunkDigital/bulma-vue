{
  "name": "bulma-vue",
  "version": "1.0.0",
  "main": "dist/bulma-vue.esm.js",
  "exports": {
    ".": "./dist/bulma-vue.esm.js",
    "./components/*": "./dist/components/*/index.js",
    "./css/bulma-vue.css": "./dist/bulma-vue.css",
    "./package.json": "./package.json"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "rollup -c rollup.config.ts -w --configPlugin rollup-plugin-esbuild",
    "build": "yarn build:js && yarn build:css",
    "build:js": "yarn clean && rollup -c rollup.config.ts --configPlugin rollup-plugin-esbuild",
    "build:css": "sass src/scss/bulma-vue.scss dist/bulma-vue.css"
  },
  "devDependencies": {
    "@types/node": "^17.0.26",
    "buefy": "^0.9.20",
    "esbuild": "^0.14.38",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "sass": "^1.51.0",
    "typescript": "^4.6.3",
    "vue": "^3.2.33"
  },
  "peerDependencies": {
    "vue": "^3.2.33"
  }
}
